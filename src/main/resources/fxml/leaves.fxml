<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.java.project.company.manager.controllers.LeavesController">
    <children>
        <TableView fx:id="tableView" tableMenuButtonVisible="true">
            <columns>
                <TableColumn fx:id="peselColumn" maxWidth="2000.0" prefWidth="75.0" text="PESEL" />
                <TableColumn fx:id="beginColumn" maxWidth="2000.0" prefWidth="75.0" text="Begin" />
                <TableColumn fx:id="endColumn" maxWidth="2000.0" prefWidth="75.0" text="End" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </VBox.margin>
        </TableView>
      <HBox alignment="TOP_RIGHT">
         <children>
            <Button mnemonicParsing="false" onAction="#leaveAction" text="Give Leave" />
         </children>
         <VBox.margin>
            <Insets bottom="10.0" right="10.0" />
         </VBox.margin>
      </HBox>
    </children>
</VBox>
